{
  "name": "io-guard",
  "version": "0.1.0",
  "main": "build/index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc --strict --outDir build -d --sourceMap src/index.ts"
  },
  "types": "build/index.d.ts",
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "jest": "^23.3.0",
    "rollup": "^0.62.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-typescript": "^1.1.2",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.test\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverage": true
  }
}
